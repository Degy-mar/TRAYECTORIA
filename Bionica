      text-align: center;
      margin-bottom: 10px;
    }

    .materia {
      background: #fff;
      border: 1px solid #000;
      border-radius: 6px;
      padding: 6px;
      margin: 5px 0;
      cursor: pointer;
      transition: 0.3s;
      text-align: center;
    }

    .materia:hover {
      background: #ddd;
    }

    /* Colores dinámicos */
    .selected {
      background: #4a90e2 !important;
      color: #fff;
    }

    .dependent {
      background: #e94e4e !important;
      color: #fff;
    }
  </style>
