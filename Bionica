  <h1>Trayectoria Académica</h1>
  <div class="grid">

    <!-- Ejemplo de semestre -->
    <div class="semestre">
      <h3>Semestre 1</h3>
      <div class="materia" data-id="calculo" data-dependientes="calculo-vectorial,ecuaciones">Cálculo Dif. e Integral</div>
      <div class="materia" data-id="algebra" data-dependientes="ecuaciones">Álgebra Lineal</div>
      <div class="materia" data-id="bio-celular">Biología Celular</div>
    </div>

    <div class="semestre">
      <h3>Semestre 2</h3>
      <div class="materia" data-id="calculo-vectorial" data-dependientes="teoria-electromagnetica">Cálculo Vectorial</div>
      <div class="materia" data-id="ecuaciones" data-dependientes="teoria-circuitos">Ecuaciones Diferenciales</div>
      <div class="materia" data-id="anatomia">Anatomía</div>
    </div>

    <div class="semestre">
      <h3>Semestre 3</h3>
      <div class="materia" data-id="teoria-electromagnetica">Fund. Teoría Electromagnética</div>
      <div class="materia" data-id="teoria-circuitos">Teoría de los Circuitos</div>
    </div>

  </div>

  <script>
    const materias = document.querySelectorAll(".materia");

    materias.forEach(materia => {
      materia.addEventListener("click", () => {
        // limpiar selección previa
        materias.forEach(m => m.classList.remove("selected", "dependent"));

        // marcar materia seleccionada
        materia.classList.add("selected");

        // obtener dependientes
        const dependientes = materia.dataset.dependientes?.split(",") || [];

        dependientes.forEach(dep => {
          const depMateria = document.querySelector(`.materia[data-id="${dep}"]`);
          if (depMateria) depMateria.classList.add("dependent");
        });
      });
    });
  </script>

</body>
